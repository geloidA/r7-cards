@inject NavigationManager NavigationManager

<Cardmngr.Components.Modals.MyBlazored.Offcanvas ShowCloseBtn="false"
    Class="my-offcanvas my-offcanvas-left" Width="300">
    <OffcanvasHeader>
        <a class="fw-bold fs-4 user-select-none" href="/">
            <FluentIcon Width="36" Value="@(new Icons.Regular.Size24.Layer())" />
            Карточки
        </a>
    </OffcanvasHeader>
    <OffcanvasBody Class="d-flex flex-column">
        <FluentButton Class="mb-2"
            OnClick="@(() => NavigationManager.NavigateTo("/"))">
            <b>На главную</b>
        </FluentButton>
        <FluentButton Class="mb-2" 
            OnClick="@(() => NavigationManager.NavigateTo("/all-projects"))">
            <b>Проекты</b>
        </FluentButton>
        <FluentButton
            OnClick="@(() => NavigationManager.NavigateTo("/feedback-board"))">
            <b>Пожелания и предложения</b>
        </FluentButton>
    </OffcanvasBody>
</Cardmngr.Components.Modals.MyBlazored.Offcanvas>

@code {
    [Parameter] public object? Nothing { get; set; } // TODO: ??? close animation only with parameter ???
}
