@using Cardmngr.Components.ProjectAggregate.Components

<Cardmngr.Components.Modals.MyBlazored.Offcanvas ShowCloseBtn="false"
    Class="my-offcanvas my-offcanvas-left" Width="300">
    <OffcanvasHeader>
        <a class="fw-bold fs-4 user-select-none" href="/home">
            <FluentIcon Width="36" Value="@(new Icons.Regular.Size24.Layer())" />
            Р7 Карточки
        </a>
    </OffcanvasHeader>
    <OffcanvasBody Class="d-flex flex-column gap-2">
        <FluentNavMenu >
            <FluentNavLink Icon="@(new Icons.Regular.Size32.Home())" 
                Href="/home" class="fw-bold">
                Главная
            </FluentNavLink>
            <FluentNavLink Icon="@(new Icons.Regular.Size32.Library())"
                Href="/all-projects" class="fw-bold">
                Проекты
            </FluentNavLink>
            <FluentNavLink Icon="@(new Icons.Regular.Size32.Lightbulb())"
                Href="/feedback-board">
                Пожелания и предложения
            </FluentNavLink>
        </FluentNavMenu>
        <FollowProjects />
    </OffcanvasBody>
</Cardmngr.Components.Modals.MyBlazored.Offcanvas>

