@inherits OffcanvasBase

<div @ref="myOffcanvas" 
    class="offcanvas @delayedShow @CssPlacement @Class" 
    style="@Style z-index: 99; @($"width: {Width}px;")" 
    tabindex="-1" 
    id="offcanvasWithBackdrop" 
    @onkeyup="HandleKeyUp" >
    @if (ShowCloseBtn) 
    {
        <div class="absolute clickable w-full" style="z-index: 999; @CloseBtnRadiusStyle" 
            @onclick="async () => await CloseAsync()" >
            @if (Placement == MyOffcanvasPlacement.Start)
            {
                <div class="flex justify-end">
                    <FluentIcon Value="@(new Icons.Regular.Size20.ArrowCircleLeft())" />
                </div>
            }
            else
            {
                <FluentIcon Value="@(new Icons.Regular.Size20.ArrowCircleRight())" />
            }
        </div>
    }
    <div style="overflow-y: auto; overflow-x: hidden;" class="mt-2 h-full"> 
        @ChildContent
    </div>
</div>
<div class="offcanvas-backdrop fade @delayedShow" style="z-index: 2;" 
    @onclick="async () => await CloseAsync(ModalResult.Cancel())"></div>
