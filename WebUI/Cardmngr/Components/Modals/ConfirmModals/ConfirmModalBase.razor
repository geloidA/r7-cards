@if (AdditionalText is { })
{
    <div>@AdditionalText</div>
}
<div class="row @(AdditionalText is { } ? "mt-4" : "")">
    <div class="col d-flex justify-content-center">
        <FluentButton OnClick="async () => await Modal.CloseAsync(ModalResult.Ok())">
            @OkTitle
        </FluentButton>
    </div>
    <div class="col d-flex justify-content-center">
        <FluentButton OnClick="async () => await Modal.CloseAsync(ModalResult.Cancel())" >
            @CancelTitle
        </FluentButton>
    </div>
</div>