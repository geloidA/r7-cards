<KolBoard TValue="Feedback" Class="m-1" CanItemDrag="x => x.CanChangeStatus">
    <Columns>
        <FeedbackColumn Width="420" Status="FeedbackStatus.Todo">
            <HeaderTemplate>
                <div class="d-flex">
                    <div style="font-size: 13px;">
                        Предложения и найденные ошибки 📝
                    </div>
                    <FluentSpacer />
                    <FluentButton OnClick="OpenCreateModalAsync"
                        Appearance="Appearance.Accent" 
                        Style="font-size: 13px; height: 20px;" >
                        Добавить
                    </FluentButton>
                </div>
            </HeaderTemplate>
        </FeedbackColumn>

        <FeedbackColumn Status="FeedbackStatus.InProgress">
            <HeaderTemplate>
                <div style="margin-top: 1px;">В работе 👨‍💻</div>
            </HeaderTemplate>
        </FeedbackColumn>

        <FeedbackColumn Status="FeedbackStatus.Finished">
            <HeaderTemplate >
                <div style="margin-top: 1px;">Готово 🏁</div>
            </HeaderTemplate>
        </FeedbackColumn>
    </Columns>
    <ItemTemplate Context="feedback">
        <FeedbackCard Feedback="feedback" />
    </ItemTemplate>
</KolBoard>
