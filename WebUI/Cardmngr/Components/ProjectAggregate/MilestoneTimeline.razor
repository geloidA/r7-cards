@using KolBlazor.Components.Timeline

@inherits KolComponentBase

<div class="flex h-full @Class" style=@Style >
    <KolTimeline Collapsed="!Collapsed" UncollapsedHeight="@(State.Milestones.Count * 40)" 
        ShowTodayLine="true" Class="scrollbar-none py-0" >
        <CascadingValue Value="milestoneTaskFilter" IsFixed="true">
            @foreach (var (milestone, start) in TimelineMilestones)
            {
                <KolTimelineItem @key="milestone.Id" End="milestone.Deadline" Start="start">
                    <TimelineMilestone Milestone="milestone" />
                </KolTimelineItem>
            }
        </CascadingValue>
    </KolTimeline>
</div>