@inherits KolComponentBase

<div style="min-height: 50px; background-color: var(--neutral-layer-1); z-index: 0; border-radius: 13px;" class="w-100 d-flex flex-column justify-content-center position-relative" >
    <div style="font-weight: 600; font-size: 15px; text-align: center;" class="align-self-center mb-1">@Milestone.Title</div>
    <div style="font-size: 13px;" class="px-2 d-flex fw-light">
        <span>@State.GetMilestoneStart(Milestone).ToShortDateString()</span>
        <div style="flex-grow: 1;"></div>
        <span>@Milestone.Deadline.ToShortDateString()</span>
    </div>
    <div style="@CssBackgroundColor transition: width 0.3s ease-in-out;
        border-radius: 13px; height: 100%; z-index: -1; position: absolute; top: 0; left: 0; @CompleteProgress"    >
    </div>
</div>