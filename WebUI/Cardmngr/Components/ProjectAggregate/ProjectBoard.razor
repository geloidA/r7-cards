@using Cardmngr.Components.ProjectAggregate.Components

<KolBoard TValue="OnlyofficeTask" CanItemDrag="@(x => x.CanEdit)" >    
    <Columns>
        @{
            var isFirst = true;
            foreach (var status in State.Statuses.InLogicalOrder() ?? [])
            {
                @if (!isFirst)
                {
                    <div class="status-column" style="width: 1px;"/>
                }
                <StatusColumn Status="status" />
                isFirst = false;
            }   
        }
    </Columns>
    <ItemTemplate Context="task">
        <TaskCard Task="task" />
    </ItemTemplate>
</KolBoard>

<FluentTooltip Anchor="responsibles">
    Ответственные
</FluentTooltip>
