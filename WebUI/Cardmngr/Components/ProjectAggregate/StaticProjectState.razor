@using Cardmngr.Components.ProjectAggregate.Components

@inherits ProjectStateBase

@if (Initialized)
{
    <CascadingValue Value="this" IsFixed="true">
        <div class="proj-state scrollbar-none" style="@CssHeight">
            <div class="ms-3 mb-1">
                <div class="row">
                    <div class="col d-flex fw-bold text-black">
                        <ProjectClosedTasksInfo></ProjectClosedTasksInfo>
                        <div class="ms-2 align-self-center">
                            @(Model?.Project?.Title ?? "Задачи вне проектов")
                        </div>
                        @if (Model is { })
                        {
                            if (IsCurrentUserInTeam)
                            {
                                <a class="align-self-center" href=@($"/project/{Model.Project!.Id}")>
                                    <Icon class="ms-1" Name="IconName.BoxArrowInDownLeft" />
                                </a>
                            }
                            else
                            {
                                <Tooltip class="align-self-center text-muted" 
                                    Title="Вы не являетесь участником команды"
                                    Placement="TooltipPlacement.Right">
                                    <Icon class="ms-1" Name="IconName.BoxArrowInDownLeft" />
                                </Tooltip>
                            }
                        }
                    </div>
                    <div class="col align-self-center d-flex justify-content-end" style="margin-right: 10px;">
                        <Icon class="clickable ms-2" @onclick="@ToggleCollapsed"
                            Name="@(isCollapsed ? IconName.ChevronDown : IconName.ChevronUp)" />
                    </div>
                </div>
            </div>
            @if (!isCollapsed)
            {
                @ChildContent
            }
        </div>
    </CascadingValue>
}
else
{
    <div class="d-flex align-self-center justify-content-center mb-2">
        <Spinner Color="SpinnerColor.Light" Size="SpinnerSize.Medium" />
        <span class="ms-2">Загрузка...</span>
    </div>
}
