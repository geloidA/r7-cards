@using Cardmngr.Components.ProjectAggregate.Components
@attribute [Authorize]

@inherits ProjectStateBase
@implements IAsyncDisposable

@if (Initialized)
{
    <CascadingValue Value="this" IsFixed="true" >
        <CascadingValue Value="hubClient" IsFixed="true">
            <CascadingValue Value="_commonHeightByKey" IsFixed="true" >
                @ChildContent
                @if (_isHubInitialized)
                {
                    <div class="right-bottom-corner user-select-none">
                        <ConnectedUsers></ConnectedUsers>
                    </div>
                }
            </CascadingValue>
        </CascadingValue>
    </CascadingValue>
}
else
{
    <div style="height: 90%;" class="d-flex justify-content-center align-items-center">
        <Loading />
    </div>
}
