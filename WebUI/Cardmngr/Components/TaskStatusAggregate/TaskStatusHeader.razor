@if (IsCollapsed)
{
    <div class="flex flex-col" style="margin-top: 7px;">
        <FluentBadge class="self-center" Appearance="Appearance.Accent" >@TaskCount</FluentBadge>
        <span class="title text-vertical self-center mt-1">
            @TaskStatus.Title
        </span>
        <div class="self-center">
            @if (TaskStatus.Image is { })
            {
                <img src=@($"data:{TaskStatus.ImageType};base64, {TaskStatus.Image}")>
            }
        </div>
    </div>
}
else
{
    <div class="flex w-full self-baseline">
        <div class="flex justify-content-start items-center">
            <FluentBadge Class="self-center" Appearance="Appearance.Accent" >
                @TaskCount
            </FluentBadge>
            <span class="title ms-1 select-none">
                @TaskStatus.Title
            </span>
            @if (TaskStatus.Image is not null)
            {
                <img alt="" src=@($"data:{TaskStatus.ImageType};base64, {TaskStatus.Image}") class="ms-1" style="width: 20px;">
            }
        </div>
        <FluentSpacer/>
        @if (TaskStatus.Available)
        {
            <div class="flex justify-end btn-hide">
                <FluentButton 
                    Style="padding: 5px !important; margin-right: -5px;"
                    BackgroundColor="@Color.Success.GetDesc()" Title="Добавить задачу"
                    OnClick="@ShowCreateTaskModal" >
                    <FluentIcon Value="@(new Icons.Regular.Size16.Add())" CustomColor="white" Color="Color.Custom"/>
                </FluentButton>
            </div>
        }
    </div>
}
