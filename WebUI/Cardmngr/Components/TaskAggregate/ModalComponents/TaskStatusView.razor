@using Onlyoffice.Api.Models

<div class="text-xs font-bold px-2 py-1 rounded-lg bg-inverse text-forground-on-accent w-fit">
    @StatusTitle
</div>

@code {

    [Parameter] public IOnlyofficeTask Task { get; set; } = null!;
    [Parameter] public IEnumerable<OnlyofficeTaskStatus> Statuses { get; set; } = null!;

    private string StatusTitle => Statuses.Single(Task.HasStatus).Title;
}
