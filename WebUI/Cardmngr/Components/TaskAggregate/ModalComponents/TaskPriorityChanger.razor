@using Onlyoffice.Api.Models

<div class="p-1 d-flex flex-row align-items-center" style="font-size: 15px;">
    Приоритет -
    @if (Task.Priority == (int)Domain.Enums.Priority.High)
    {
        <i class="ms-1 text-primary">Высокий</i>
        <Icon class="ms-1" Name="IconName.ArrowUpCircleFill" Color="IconColor.Primary"/>
    }
    else
    {
        <i class="ms-1 text-secondary">Обычный</i>
    }
    <div class="col d-flex justify-content-end">
        <Tool IconName="IconName.ArrowDownUp" TooltipPlacement="TooltipPlacement.Top"
            Disabled="@Disabled" TooltipTitle="Изменить" 
            OnClick="@(() => Task.Priority = Task.Priority == (int)Domain.Enums.Priority.High 
                ? (int)Domain.Enums.Priority.Regular 
                : (int)Domain.Enums.Priority.High)"/>
    </div>
</div>

@code {
    [Parameter] public TaskUpdateData Task { get; set; } = null!;
    [Parameter] public bool Disabled { get; set; }
}
