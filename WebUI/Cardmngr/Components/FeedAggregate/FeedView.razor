
@using KolBlazor.Components.Virtualization
@inherits KolComponentBase

<div class="d-flex flex-column gap-3 h-100 @Class" style="@Style" @onclick="HandleClick">
    @if (_loading)
    {
        <Loading />
    }

    @if (_feedsByProject.Count != 0)
    {
        <CascadingValue IsFixed Value="_feedUsers" >
            @foreach (var feeds in _feedsByProject)
            {
                <FeedProjectModule Feeds="feeds" Name="@feeds.Key" />
            }
        </CascadingValue>
    }
    else @if (!_loading)
    {
        <FluentCard MinimalStyle Width="100%" Height="125px" class="d-flex flex-column justify-content-center align-items-center" >
            <h2 class="fw-bold">Здесь пока ничего нет</h2>
            <span style="color: var(--info);">
                Вы можете настроить фильтр, чтобы увидеть больше.
            </span>
        </FluentCard>
    }
</div>
