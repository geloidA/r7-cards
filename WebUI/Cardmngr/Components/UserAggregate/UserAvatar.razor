@inherits KolComponentBase

@if (User is { })
{
    <div class="flex flex-row select-none items-center py-1 @Class" style="@Style">
        <div class="avatar-circle responsible-view" style="@($"width: {Size}px; height: {Size}px; min-width: {Size}px;")">
            @if (ShowTooltip)
            {
                <img draggable="false" title="@User.DisplayName" width="@Size" src=@($"onlyoffice/api/people{User.AvatarSmall}") />
            }
            else
            {
                <img draggable="false" src=@($"onlyoffice/api/people{User.AvatarSmall}") />
            }
        </div>
        @if (ShowName)
        {
            <div class="ms-1 font-light">@User.DisplayName</div>
        }
    </div>
}