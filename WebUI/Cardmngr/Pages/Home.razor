@page "/"

@inherits AuthorizedPage

@inject IProjectClient ProjectClient
@inject IToastService ToastService

<PageTitle>Главная</PageTitle>

<AuthorizeView>
    <div class="h-100 w-100 detal-background" >
        <div class="row w-100 h-100">
            <div class="col d-flex align-items-end">
                <FluentButton Style="margin-bottom: 4em;" Class="p-1" 
                    OnClick="@(() => NavigationManager.NavigateTo("feedback-board"))">
                    <span style="font-size: 20px;" class="fw-lighter user-select-none" >
                        <Icon Name="IconName.Lightbulb" />
                        Пожелания и предложения
                    </span>
                </FluentButton>                
            </div>
            <div class="col d-flex align-items-center">
                <div class="row">
                    <div class="col">
                        <UserProjectsView UserProjects="userProjects" Class="bg-shadow" MaxHeight="500" />
                    </div>
                </div>
            </div>
            <div class="col">
            </div>
        </div>
    </div>
</AuthorizeView>

@code {
    private List<Project>? userProjects;

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        if (IsAuthenticated)
        {
            userProjects = await ProjectClient.GetSelfProjectsAsync().ToListAsync();
        }
    }
}