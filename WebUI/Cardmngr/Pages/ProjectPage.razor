@page "/project/{ProjectId:int}"

@inherits AuthorizedPage

@inject IProjectApi ProjectApi

<PageTitle>Проект</PageTitle>

<AuthorizeView>
    <MutableProjectState Id="ProjectId ?? 0" >
        <div class="d-flex flex-column h-100">
            <div class="mb-2">
                <ProjectBoardHeader></ProjectBoardHeader>
            </div>
            <div class="d-flex flex-column ms-3 h-100">
                <ProjectBoard></ProjectBoard>
            </div>
        </div>
    </MutableProjectState>
</AuthorizeView>

@code {
    [Parameter] public int? ProjectId { get; set; }
}