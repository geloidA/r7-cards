@using Cardmngr.Application.Clients.People
@using Cardmngr.Application.Group
@using Cardmngr.Exceptions
@using Cardmngr.Report
@using Cardmngr.Reports
@using Onlyoffice.Api
@using Onlyoffice.Api.Common

@inject IProjectClient ProjectClient
@inject IGroupClient GroupClient
@inject IPeopleClient PeopleClient
@inject IToastService ToastService
@inject IServiceProvider ServiceProvider

<div class="d-flex flex-wrap">
    <div class="col">
        <h4>Коэффициент эффективности</h4>
        <p>Отчет <i>'Коэффициент эффективности'</i> отобразит список выполненных и просроченных задач, сгруппированных по ответственным за них пользователям и проектам.</p>
        <p>Чтобы посмотреть список всех пользователей во всех проектах, сразу нажмите <i>'Сгенерировать отчет'.</i></p>
        <p>Настройте интервал дат крайнего срока задач для выборки интересующего вас периода.</p>
        <p>
            <FluentMessageBar Title="Примечание." Intent="@MessageIntent.Warning" AllowDismiss="false" >
                Подсчет процентных значений выполняется по формуле: 
                <math class="fs-5 ms-1">
                    <mrow>
                        <mfrac>
                            <mrow>
                                <mi>x</mi>
                            </mrow>
                            <mrow>
                                <mi>y</mi>
                            </mrow>
                        </mfrac>
                        <mo>∙</mo>
                        <mi style="font-size: 15px;">100 %</mi>
                    </mrow>
                </math>
            , где <math class="fs-5 ms-1"><mi>x</mi></math> - кол-во выполненных/просроченных задач, а <math class="fs-5 ms-1"><mi>y</mi></math>
            общее их кол-во.
            Что некорректно, но это будет исправлено в будущем. <FluentEmoji Width="22px" Value="@(new Emojis.SmileysEmotion.Flat.Default.UpsideDownFace())" />
            </FluentMessageBar>
        </p>
        <p>Пример отчета:</p>
        <img src="images/efficiency-factor-report-example.png" class="mb-2" width="800" 
            style="border-radius: 10px; opacity: 0.8; box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.5);" />
    </div>
    <div class="col p-2">
        <FluentCard AreaRestricted="false" style="background-color: var(--neutral-layer-3); box-shadow: none; border: none;">
            <div class="d-flex flex-column">
                <div class="d-flex flex-column gap-3">
                    
                    <FluentAutocomplete
                        Label="Проект:" 
                        Placeholder="Все" 
                        TOption="Project" 
                        AutoComplete="off"
                        style="max-width: 500px;"
                        OptionText="x => x.Title"
                        MaximumOptionsSearch="100"
                        OnOptionsSearch="OnProjectSearch"                        
                        @bind-SelectedOptions="reportRequest.Projects"
                        IconSearch="@(new Icons.Regular.Size20.ProjectionScreen())" >

                        <OptionTemplate Context="project">
                            <span title="@project.Title" class="ellipsis-truncate">@project.Title</span>
                        </OptionTemplate>
                    </FluentAutocomplete>

                    <div class="d-flex gap-3">
                        <FluentAutocomplete 
                            Placeholder="Все" 
                            AutoComplete="off"
                            TOption="UserInfo" 
                            Label="Ответственные:" 
                            style="max-width: 500px;"
                            MaximumOptionsSearch="100"
                            OnOptionsSearch="OnUserSearch"
                            OptionText="x => x.DisplayName"
                            Disabled="reportRequest.Group.Any()"
                            @bind-SelectedOptions="reportRequest.Responsibles"
                            IconSearch="@(new Icons.Regular.Size20.PersonLightbulb())" >

                            <OptionTemplate Context="user">
                                <span title="@user.DisplayName" class="ellipsis-truncate">@user.DisplayName</span>
                            </OptionTemplate>
                        </FluentAutocomplete>

                        <FluentAutocomplete
                            Label="Группа:" 
                            TOption="Group" 
                            Placeholder="Все" 
                            AutoComplete="off"
                            OptionText="x => x.Name"
                            style="max-width: 500px;" 
                            MaximumSelectedOptions="1"
                            MaximumOptionsSearch="100"
                            OnOptionsSearch="OnGroupSearch"
                            @bind-SelectedOptions="reportRequest.Group"
                            IconSearch="@(new Icons.Regular.Size20.PersonLightbulb())" >

                            <OptionTemplate Context="group">
                                <span title="@group.Name" class="ellipsis-truncate">@group.Name</span>
                            </OptionTemplate>
                        </FluentAutocomplete>
                    </div>

                    <IntervalPicker Label="Крайний срок"
                        @bind-Start="@reportRequest.Deadline.Start"
                        @bind-End="@reportRequest.Deadline.End" />
                </div>
                <div class="d-flex mt-4">

                    <FluentSpacer />
                    <FluentButton 
                        Loading="generating" 
                        IconStart="@(new Icons.Filled.Size16.ArrowDownload())" 
                        @onclick="GenerateReport" >

                        Сгенерировать отчет
                    </FluentButton>
                </div>
            </div>
        </FluentCard>
    </div>
</div>
