@inherits KolComponentBase

<div class="d-flex flex-row align-items-center @Class">
    <div class="col-md-11">
        @if (isEditMode)
        {
            <InputText style="font-size: 40px; font-weight: 500; width: 100%; border: 1px solid var(--boarder-color); border-radius: 6px;" 
                @bind-Value:get="Title" class="p-0" @bind-Value:set="SetTitle" />
        }
        else
        {
            <h1 class="py-1">@Title</h1>
        }
    </div>
    <div class="col-md-1 d-flex justify-content-end">
        <Tool IconName="@(isEditMode ? IconName.PencilFill : IconName.Pencil)" 
            Disabled="Disabled"
            TooltipTitle="@(isEditMode ? "Прекратить" : "Изменить")" 
            OnClick="() => isEditMode = !isEditMode"/>
    </div>
</div>

@code {
    private bool isEditMode;
    [Parameter] public string? Title { get; set; }
    [Parameter] public EventCallback<string?> TitleChanged { get; set; }

    private async Task SetTitle(string? value)
    {
        await TitleChanged.InvokeAsync(value);
    }

    [Parameter] public bool Disabled { get; set; }
}
