@using BlazorCards
@using Cardmngr.Utils

@inject IJSRuntime JSRuntime

<div class="viewport workarea" @onmousedown="@StartPan"
    @onmousedown:preventDefault
    onwheel="panzoom.zoom(event)">
    <div id="workarea" style="transform-origin:0% 0%;">
        <div class="container">
            <h1>JavaScript - Drag and Drop</h1>
            <div class="drop-targets">
                <div class="box">
                    <div class="item" id="item" draggable="true">
                    </div>
                </div>
                <div class="box">
                    <div class="item" id="item" draggable="true">
                    </div>
                </div>
                <div class="box"></div>
                <div class="box"></div>
                <div class="box"></div>
                <div class="box"></div>
            </div>
        </div>
    </div>
</div>

@code {

    private Vector2 clickStartPos;

    private async Task StartPan(MouseEventArgs e)
    {
        clickStartPos = e.GetClientPos();
        await JSRuntime.InvokeVoidAsync("panzoom.startPan");
    }
}